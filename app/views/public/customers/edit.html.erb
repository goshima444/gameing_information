<div class="container">
  <div class="row my-4 ml-5">
    <h2><strong>会員情報編集</strong></h2>
  </div>

  <%= form_with model:@customer, url: customers_information_path do |f| %>

  <div class="d-flex justify-content-around align-items-center col-9">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %><span>  </span></%><%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %><span>  </span><%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td> <%= f.email_field :email %> </td>
        </tr>

        <tr>
          <th colspan="1"></th>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
          <td><%= link_to "退会する", customers_quit_path, class: "btn btn-danger" %></td>
        </tr>

      </tbody>
    </table>
  </div>

  <% end %>

</div>