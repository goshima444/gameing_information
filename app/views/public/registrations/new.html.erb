<div class="container">
  <div class="row my-4 ml-5">
     <h2 class="bg-light text-center">新規会員登録</h2>
  </div>
　　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="d-flex justify-content-around align-items-center col-10">
    　　<table class="table table-borderless">

            <tr>
           　 <th>名前</th>
              <td>（姓）<%= f.text_field :last_name, class: "form-control input-md"%> </td>
              <td>（名）<%= f.text_field :first_name, class: "form-control input-md" %> </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>（セイ）<%= f.text_field :last_name_kana, class: "form-control input-md" %> </td>
              <td> (メイ) <%= f.text_field :first_name_kana, class: "form-control input-md" %> </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td> <%= f.email_field :email, class: "form-control input-md" %> </td>
           　 </tr>
            <th>パスワード(6文字以上)</th>
              <td> <%= f.password_field :password, class: "form-control input-md" %> </td>
            </tr>
            <th>パスワード(確認用)</th>
              <td> <%= f.password_field :password_confirmation, class: "form-control input-md" %> </td>
            </tr>
            <tr>
              <th colspan="1"></th>
              <td><%= f.submit "新規登録", class: "btn btn-success" %> </td>
            </tr>

        </table>
      </div>
<% end %>
 <div class="row my-4 ml-5">
     <h2 class="bg-light text-center">既に登録済の方</h2>
  </div>
 <div class="d-flex flex-row col-9 mx-auto">
   <p class= "mb-5"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
 </div>
</div>