<!DOCTYPE html>
<html>
  <head>
    <title>gameing_information</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
      <div class="container">
       <%= link_to(image_tag("default-image.jpg", style: "width: 100px; height: 50px;"), root_path) %>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls"navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
              <li>
               <%= link_to "投稿一覧", post_images_path, class: "nav-link text-light" %>
              </li>
              <li>
               <%= link_to "会員一覧", admin_customers_path, class: "nav-link text-light"  %>
              </li>
               <li>
               <%= link_to "タグ一覧", admin_tags_path, class: "nav-link text-light"  %>
              </li>
              <li>
               <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-light"  %>
              </li>
          <% elsif customer_signed_in? %>
               <p class="nav-link text-light">ようこそ、<%= current_customer.last_name %>さん！</p>
               <li>
               <%= link_to "マイページ", customers_my_page_path, class: "nav-link text-light"  %>
               </li>
               <li>
               <%= link_to "投稿一覧", post_images_path, class: "nav-link text-light"  %>
               </li>
               <li>
               <%= link_to "新規投稿", new_post_image_path, class: "nav-link text-light"  %>
               </li>
               <li>
               <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link text-light"  %>
               </li>
          <% else %>
               <li>
               <%= link_to "About", about_path, class: "nav-link text-light"  %>
               </li>
               <li>
               <%= link_to "投稿一覧", post_images_path, class: "nav-link text-light" %>
               </li>
                <li>
               <%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-light" %>
               </li>
               <li>
               <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-light" %>
               </li>
               <li>
                 <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "nav-link text-light" %>
               </li>
          <% end %>
         </ul>
         <div>
          <%= render 'layouts/search' %>
         </div>
        </div>
       </div>
    </nav>
   </header>

   <main  class="mb-5">
    <div>
     <%= yield %>
    </div>
   </main>

   <footer>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-bottom">
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
       </div>
      </div>
     </div>
    </nav>
   </footer>
 </body>
</html>
