<div class="container">
  <div class="row my-4 ml-5">
    <h2 class="bg-light text-center col-3">タグ編集</h2>
  </div>

<%= form_with model:@tag, url: admin_tag_path do |f| %>
  <div class="d-flex justify-content-between align-items-center col-6">
      <p><%= f.label :"タグ名" %></p>
      <p><%= f.text_field :name %></p>
      <p><%= f.submit '変更を保存', class: "btn btn-success btn-lg" %></p>
  </div>
<% end %>
</div>